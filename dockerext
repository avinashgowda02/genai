FROM python:3.12-bullseye

WORKDIR /app

COPY test_EXTRACTION/ .

# Update packages and install the required libgl1 dependency
RUN apt-get update && apt-get install -y libgl1 libglib2.0-0
# Then install your python packages from requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Assuming app.py is directly under test_EXTRACTION

EXPOSE 8001

CMD ["python3", "/app/src/service_bus_main.py"]
